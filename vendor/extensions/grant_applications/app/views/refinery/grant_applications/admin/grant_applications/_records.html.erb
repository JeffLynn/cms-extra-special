<%= render 'refinery/admin/search_header', :url => refinery.grant_applications_admin_grant_applications_path %>
<% if searching? %>
  <% if @grant_applications.any? %>
    <ul>
      <%= render :partial => 'grant_application', :collection => @grant_applications %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_grant_applications.any? -%>
    <% @grouped_grant_applications.each do |container| %>
      <h3><%= l((grant_application_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'grant_application', :collection => grant_application_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_grant_applications', :scope => 'refinery.grant_applications.admin.grant_applications.index') %></strong>
    </p>
  <% end -%>
<% end %>
