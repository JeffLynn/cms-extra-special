<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@grant_application.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_grant_applications'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.grant_applications.admin.grant_applications'),
                  refinery.grant_applications_admin_grant_application_path(@grant_application),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.grant_applications.admin.grant_applications'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @grant_application.name),
