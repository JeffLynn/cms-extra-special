<% content_for :body do %>
  <div class='grant_applications'>

    <%= form_for [refinery, :grant_applications, @grant_application] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @grant_application,
                 :include_object_name => true  %>

      <div class='field applicant_field string_field'>
       <%= f.label :applicant, "Name of applicant*"%>
        <%= f.text_field :applicant %>
      </div>
	  
      <div class='field address_field text_field'>
        <%= f.label :address, "Address of applicant*" %>
        <%= f.text_area :address, :rows => 8 %>
      </div>

      <div class='field supporter_field string_field'>
        <%= f.label :supporter, "Name of Applicant's Supporter**" %>
        <%= f.text_field :supporter %>
      </div>

      <div class='field supporter_contact_field text_field'>
        <%= f.label :supporter_contact, "Address of Supporter*" %>
        <%= f.text_area :supporter_contact, :rows => 8 %>
      </div>

      <div class='field email_field string_field'>
        <%= f.label :email, "email for Supporter*" %>
        <%= f.text_field :email %>
      </div>

      <div class='field application_details_field text_field'>
        <%= f.label :application_details, "What Applicant is applying for*" %>
        <%= f.text_area :application_details, :rows => 8 %>
      </div>

      <div class='field relevant_information_field text_field'>
        <%= f.label :relevant_information, "Relevant information about the applicant and the application*"%>
        <%= f.text_area :relevant_information, :rows => 8 %>
      </div>

      <div class='field cost_details_field text_field'>
        <%= f.label :cost_details, "Details of Cost (Attach quotation or estimate)*" %>
        <%= f.text_area :cost_details, :rows => 8 %>
      </div>

      <div class='field other_contributions_field string_field'>
        <%= f.label :other_contributions, "Amount which others have agreed to contribute*" %>
        <%= f.text_field :other_contributions %>
      </div>

      <div class='field amount_requested_field string_field'>
        <%= f.label :amount_requested, "Amount requested from the ExtraSpecial Trust*" %>
        <%= f.text_field :amount_requested %>
      </div>
	
      <div class='field registered_care_allowance_field checkbox_field'>
        <%= f.label :registered_care_allowance, "Select which allowances that the Applicant receives."%>
        <%= f.label :registered_care_allowance, "If none, select 'None'" %>
        <%= f.check_box :registered_care_allowance %>
        <%= f.label :registered_care_allowance%>
      </div>

      <div class='field supported_living_allowance_field checkbox_field'>
        <%= f.check_box :supported_living_allowance %>
        <%= f.label :supported_living_allowance %>
      </div>

      <div class='field domiciliary_allowance_field checkbox_field'>
        <%= f.check_box :domiciliary_allowance %>
        <%= f.label :domiciliary_allowance %>
      </div>

      <div class='field none_field checkbox_field'>
        <%= f.check_box :none %>
        <%= f.label :none %>
      </div>

      <!-- There are no Terms & Conditions, so this makes no sense -->
	  <!-- <div class='field accept_terms_field checkbox_field'>
        <%= f.check_box :accept_terms %>
        <%= f.required_label :accept_terms %>
      </div> -->

      <div class='actions'>
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
